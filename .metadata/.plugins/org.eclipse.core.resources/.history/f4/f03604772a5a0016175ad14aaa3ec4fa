import java.util.ArrayList;
import java.util.List;

public class Recursion {
    public List<Integer> getRow(int n) {
    	List<Integer> cur = new ArrayList();
    	cur.add(1);
        if(n == 0) return cur;
        List<Integer> up = getRow(n-1);
        
        for(int i = 1; i < n; i++){
        	cur.add(up.get(i)+up.get(i-1));
        }
        
        cur.add(1);
        return cur;
    }
}
