import java.util.LinkedList;
import java.util.Queue;

public class TreeNodeHelper {
	public TreeNode treeBuilder(int[] n){
    	if(n.length == 0)
			return null;
    	Queue<TreeNode> q = new LinkedList<TreeNode>();
    	int lv = 0,sum = 0,cur,next;
    	
    	while(true){
    		//构造当前层次
    		for(int i = 0; i < lv; i++){
    			if(n[sum] == 0) q.add(null);
    			else q.add(new TreeNode(n[sum++]));
    		}
    		
    		lv *= 2;
    	}
    	
    	return root;
	}
}
