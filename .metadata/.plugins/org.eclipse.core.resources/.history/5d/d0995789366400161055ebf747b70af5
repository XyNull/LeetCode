
public class BinarySearch {
    public int findMin(int[] n) {
    	int length = n.length;
    	if(length == 1) return n[0];
    	if(length == 2) return Math.min(n[0],n[1]);
    	
    	return biSearch(n,0,length-1);
    }
    
    public int biSearch(int[] n, int start, int end){
    	if(start >= end || n[end] > n[start]) return n[start];
    	
    	int mid = (start + end) / 2;
    	while(n[mid] == n[start]) start++;
    	if(n[mid] < n[start]) return biSearch(n,start,mid);
    	else return biSearch(n,mid,end);
    }
}
