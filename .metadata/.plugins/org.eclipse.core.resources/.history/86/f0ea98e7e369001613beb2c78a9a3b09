
public class Recursion {
	public void connect(TreeLinkNode root) {
    	if(root == null || (root.left == null && root.right == null))
			return;
    	TreeLinkNode exist;
    	
    	if(root.left != null && root.right != null){
    		root.left.next  = root.right;
        	if(root.next != null){
        		if(root.next.right == null) 
            		root.right.next = root.next.left;
            	else if(root.next.left == null) 
            		root.right.next = root.next.right;
        	}
    	}
    	
    	else if(root.next != null){
    		if(root.left != null) exist = root.left;
    		else if(root.right != null) exist = root.right;
    		
    		if(root.next.left != null) 
    			exist.next = root.next.left;
    		else if(root.next.right != null) 
    			exist.next = root.next.right;
    	}
    	
    	/*else if(root.left != null && root.next != null){
    		if(root.next.left != null) 
    			root.left.next = root.next.left;
    		else if(root.next.right != null) 
    			root.left.next = root.next.right;
    	}
    	
    	else if(root.right != null && root.next != null){
    		if(root.next.left != null) 
    			root.right.next = root.next.left;
    		else if(root.next.right != null) 
    			root.right.next = root.next.right;
    	}*/
    	
    	connect(root.left);
    	connect(root.right);
    }
}
