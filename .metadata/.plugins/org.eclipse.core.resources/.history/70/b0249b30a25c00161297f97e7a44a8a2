import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Main {
	public static void main(String[] args){
		int[] a = {1,1,1,0};
		threeSumClosest(a,100);
	}
	
    public static int threeSumClosest(int[] n, int t) {
    	int length = n.length;
    	if(length <= 3) return n[0]+n[1]+n[2];
    	
    	Arrays.sort(n);
    	int res = n[0]+n[1]+n[2];
    	
loopi:   for(int i = 0; i < length; i++){ 	
        	int p = i+1,q = p+1;
        	
loopp:    	for(;p <= length-2; p++){
				q = p+1;
loopq:			while(q <= length-1){
    				int cur = n[q]+n[p]+n[i];
    				if(cur-t <= res-t){
    					cur = res;
    				}
    				
    				if(q == length-1) break;
    				//q去重
					while(n[q] == n[q+1]){
						q++;
						if(q > length-2) break loopq;
					}
    				q++;
        		}
        	
			//p去重
				while(n[p] == n[p+1]){
					p++;
					if(p > length-2) break loopp;
				}
        	}
        	
        	if(i >= length-1) break;
			//i去重
			while(n[i] == n[i+1]){
				i++;
				if(i > length-2) break loopi;
			}
        }
        return res;
    }
}
