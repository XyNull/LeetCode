
public class Main {
    public TreeNode invertTree(TreeNode root) {
        if(root != null){
        	root.left.val ^= root.right.val;
        	root.right.val ^= root.left.val;
        	root.left.val ^= root.right.val;
        }else return null;
        invertTree(root.left);
        invertTree(root.right);
        return root;
    }
}
