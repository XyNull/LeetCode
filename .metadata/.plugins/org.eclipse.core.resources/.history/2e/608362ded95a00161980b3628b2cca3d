import java.util.List;
import java.util.ArrayList;
import java.util.Arrays;

public class Main {
	public static void main(String[] args){
		int[] a = {-1,0,1,2,-1,-4};
		threeSum(a);
	}
	
    public static List<List<Integer>> threeSum(int[] n) {
    	Arrays.sort(n);
    	List<List<Integer>> res = new ArrayList();
    	
        for(int i = 0; i < n.length; i++){
        	//找到相同数列的倒数第二位
        	while(n[i] == n[i+1]){
        		i++;
        		if(i >= n.length) break;
        	}
        	i--;
        	
        	//以剩余数为边界，新建双指针移动寻找
        	int x = 0 - n[i];
        	int p = i,q = i+1;
        	
    		for(; n[p] <= x; p++){
    			//去重
	        	while(n[p] == n[p+1]){
	        		p++;
	        		if(p >= n.length) break;
	        	}
	        	if(p >= n.length) break;
    			q = p+1;
    			
    			while(n[q] <= x){
    				//去重
    	        	while(n[q] == n[q+1]){
    	        		q++;
    	        		if(q >= n.length) break;
    	        	}
    	        	if(q >= n.length) break;
    	        	
    				if(n[q]+n[p] == x){
    					List<Integer> three = new ArrayList();
    					three.add(n[i]);
    					three.add(n[q]);
    					three.add(n[p]);
    					res.add(three);
    				}
        		else q++;
        		}
        	}
        }
        
        return res;
    }
}
